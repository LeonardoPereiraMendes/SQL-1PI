-- Criação da tabela Alunos
CREATE TABLE IF NOT EXISTS Alunos (
    ID INTEGER PRIMARY KEY,
    Nome TEXT,
    Idade INTEGER,
    turma INTEGER,
    Nota REAL
);

DELETE FROM Alunos;

-- Inserção de registros na tabela Alunos
INSERT INTO Alunos (Nome, Idade, turma, Nota) VALUES
('João', 17, 10, 8.5),
('Maria', 16, 11, 9.0),
('Pedro', 15, 9, 7.5),
('Ana', 14, 10, 8.0),
('Carlos', 18, 12, 9.5);

-- Selecionar todos os alunos
SELECT * FROM Alunos;

-- Selecionar nome e idade de alunos com idade superior a 15 anos
SELECT Nome, Idade FROM Alunos WHERE Idade > 15;

-- Selecionar nome, classe e nota de alunos na classe 10
SELECT Nome, Classe, Nota FROM Alunos WHERE Classe = 10;

-- Calcular a média das notas de todos os alunos
SELECT AVG(Nota) AS MediaNotas FROM Alunos;

-- Selecionar nome e nota do aluno com a nota mais alta
SELECT Nome, Nota FROM Alunos ORDER BY Nota DESC LIMIT 1;

-- Atualizar a nota do aluno com ID igual a 3 para 90
UPDATE Alunos SET Nota = 90 WHERE ID = 3;

-- Excluir todos os alunos com idade inferior a 12 anos
DELETE FROM Alunos WHERE Idade < 12;

-- Selecionar o nome e a idade do aluno mais novo na tabela
SELECT Nome, Idade FROM Alunos ORDER BY Idade ASC LIMIT 1;